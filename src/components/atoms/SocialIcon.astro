---
// Social Icon as an Atom
interface Props {
  href: string;
  icon: string; // Path to SVG or icon class
  label: string; // Accessible name for the icon
}

const { href, icon, label } = Astro.props;
---
<a
  href={href}
  aria-label={label}
  target="_blank"
  rel="noopener noreferrer"
  class="text-gray-500 hover:text-gray-700"
>
  <img src={icon} alt={label} class="h-6 w-6" />
</a>
