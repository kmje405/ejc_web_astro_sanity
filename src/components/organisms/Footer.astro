---
// Organism: Footer combining logo, navigation, social icons, and copyright
import Logo from '../atoms/Logo.astro';
import FooterNavigation from '../molecules/FooterNavigation.astro';
import SocialIcons from '../molecules/SocialIcons.astro';

interface Props {
  logoSrc: string;
  logoAlt: string;
}

const { logoSrc, logoAlt } = Astro.props;

---
<footer class="bg-black text-white py-6 px-4">
  <div class="container mx-auto flex flex-col md:flex-row justify-between items-center">
    <!-- Logo Section -->
    <div class="mb-4 md:mb-0">
      <Logo src="/icons/ejc-icon-white.png" alt={logoAlt} />
    </div>

    <!-- Navigation Links -->
    <div class="mb-4 md:mb-0 flex flex-row">
      <FooterNavigation />
    </div>

    <!-- Social Media Links -->
    <div>
      <SocialIcons />
    </div>
  </div>

  <!-- Copyright -->
  <div class="text-center mt-4 text-sm">
    &copy; {new Date().getFullYear()} Eastland Jones Creative LLC. All rights reserved.
  </div>
</footer>
